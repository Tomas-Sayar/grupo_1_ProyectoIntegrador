<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de edicion'}) %>

    <body>
        <!-- Header -->
        <%- include('partials/header') %>
            <!-- /Header -->


            <div class="container products-wrapper">
                <div class="row">
                    <div class="col-12">
                        <h2 class="products-title">Formulario de edición de productos</h2>
                    </div>
                </div>
                <div class="col-12">
                    <form method="post" action="/products/:id/edit?_method=PUT" >
                        <div class="row product-detail">
                            <div class="col-12 col-md-6">
                                <label for="name" class="form-label">Nombre del producto:</label>
                                <input type="text" id="name" name="name" value="<%=productsSelect%>" class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="price" class="form-label">Precio del producto:</label>
                                <input type="text" id="price" name="price" placeholder="Ej: $300" class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="discount" class="form-label">Descuento:</label>
                                <input type="text" id="discount" name="discount" placeholder="Ej: 10%"
                                    class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="category" class="form-label">Categoría:</label>
                                <select name="category" id="category" class="form-input">
                                    <option value="">Elegí</option>
                                    <option value="in-sale">En oferta</option>
                                    <option value="visited">Últimos agregados</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label for="description" class="form-label">Descripción:</label>
                                <textarea name="description" id="description" class="form-input" cols="30"
                                    rows="10"></textarea>
                            </div>
                            <br>
                            <div class="col-12">
                                <label for="image" class="form-label">Imagen:</label>
                                <input type="file" id="imagen" name="image" class="form-input" accept=".jpg" multiple
                                    required>
                            </div>
                            <div class="section-button">
                                <div class="button">
                                    <button type="submit" class="buy-now-button">Guardar</button>
                                </div>
                                <div class="button">
                                    <button type="submit" class="edit-button">Editar</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /todos los productos -->

            <!-- footer -->
            <%- include('partials/footer') %>
                <!-- /footer -->
    </body>

</html>