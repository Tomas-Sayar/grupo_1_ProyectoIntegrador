<!DOCTYPE html>
<html lang="en">

<!-- HEAD -->
<%- include("./partials/head") %>

    <body>
        <!-- HEADER -->
        <%- include("./partials/header") %>
            <main>
                <section class="products">
                    <% products.forEach(product=> { %>
                        <article>
                            <a href="/products/<%=product.id%>">
                                <img src="/img/products/<%=product.image%>" alt="frutos-secos">
                            </a>
                            <div class="info">
                                <h1>
                                    <%= product.name %>
                                </h1>
                                <p class="descripcion">
                                    <%= product.description %>
                                </p>
                                <p class="precio">
                                    <%= product.price %>
                                </p>
                            </div>
                        </article>
                        <% }); %>
                    </div>
                </section>
                </section>
            </main>
            <div>
                <a href="/products/create">
                <button class="create-product">CREAR PRODUCTO</button>
                </a>
            <!-- FOOTER -->
            <%- include("./partials/footer") %>
    </body>

</html>