<!DOCTYPE html>
<html lang="en">

<!-- HEAD -->
<%- include("./partials/head") %>

    <body>
        <!-- HEADER -->
        <%- include("./partials/header") %>

            <main>
                <section class="detalles">
                    <h2>
                        <%=product.name%>
                    </h2>

                    <div class="product-details">
                        <img src="/img/products/<%= product.image.filename %>" alt="mielLiquida">
                        <div class="info-product-details">
                            <p class="descrip">
                                <%= product.description %>
                            </p>
                            <p class="precio">
                                <%= product.price %>
                            </p>
                            <a href="/carrito">
                                <button class="boton-agregar">Agregar al carrito</button>
                            </a>
                        </div>
                    </div>
                    <div>
                        <a href="/products/edit/<%=product.id%>">
                            <button class="edit">EDITAR</button>
                        </a>
                    </div>
               <div>
                     <a href="/products/<%=product.id%>/delete">
                            <form action="/products/<%=product.id%>/delete?_method=DELETE" method="POST" enctype="multipart/form-data">
                                <button type="submit" class="delete">BORRAR</button>
                            </form>
                      
                        

                       <!--   <a href="/products/delete/<%=product.id%>">
                            <form action="/products/delete/<%=product.id%>?_method=DELETE" method="POST"
                                enctype="multipart/form-data">
                                <button type="submit" class="delete">BORRAR</button>
                            </form>
                        </a>
  -->
                    </div>

                </section>

                <p class="boton-compartir">Compartir</p>
                <section class="compartir">
                    <i class="fab fa-instagram"></i>
                    <i class="fab fa-twitter"></i>
                    <i class="fab fa-facebook"></i>
                </section>

                <h4 class="titulo-art-relacionado">Articulos relacionados</h4>

                <section class="productos-relacionados">

                    <% relatedProducts.forEach(product=> { %>
                        <div class="articulo-relacionado">
                            <a href="/products/<%=product.id%> ">
                                <img src="/img/products/<%=product.image.filename%>">
                            </a>
                            <div class="info">
                                <h1>
                                    <%=product.name%>
                                </h1>
                                <p class="descripcion">
                                    <%=product.description%>
                                </p>
                                <p class="precio">
                                    <%=product.price%>
                                </p>
                                <p class="agregar">Agregar al carrito</p>
                            </div>
                        </div>
                        <% }) %>

                </section>


            </main>

            <!-- FOOTER -->
            <%- include("./partials/footer") %>

    </body>

</html>