        <%- include("./partials/header") %>

            <main>

                <section class="detalles">
                    <h2>
                        <%=products[0].titulo%>
                    </h2>

                    <div class="product-details">

                        <img src="<%= products[0].img %> " alt="mielLiquida">

                        <div class="info-product-details">
                            <p class="descrip">
                                <%= products[0].descripcion %>
                            </p>
                            <p class="precio">
                                <%= products[0].precio %>
