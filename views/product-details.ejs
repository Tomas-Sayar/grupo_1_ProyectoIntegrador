                </section>

                <h4 class="titulo-art-relacionado">Articulos relacionados</h4>

                <section class="productos-relacionados">

                    <div class="articulo-relacionado">
                        <a href="">
                            <img src="<%  %> ">
                        </a>
                        <div class="info">
                            <h1>
                                <% %>
                            </h1>
                            <p class="descripcion">
                                <% %>
                            </p>
                            <p class="precio">
                                <% %>
                            </p>
                            <p class="agregar">Agregar al carrito</p>
                        </div>
                    </div>

                </section>


            </main>

            <!-- FOOTER -->
            <%- include("./partials/footer") %>

